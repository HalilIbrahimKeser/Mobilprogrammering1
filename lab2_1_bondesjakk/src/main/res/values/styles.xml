<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStylePlayers" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#CA2A72</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColorHighlight">#FF6200EE</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorLink">#FF03DAC5</item>

    </style>

    <style name="textStyleButtons" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#6B23CF</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>

        <item name="android:textAppearance">@style/textStyleButtons</item>
        <item name="android:textColorHighlight">@color/purple_500</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorLink">#FF03DAC5</item>
    </style>

    <style name="textStyleButtonsBigText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">90sp</item>
        <item name="android:textColor">#6B23CF</item>
        <item name="android:textAppearance">@style/textStyleButtons</item>
        <item name="android:textColorHighlight">@color/purple_500</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorLink">#FF03DAC5</item>

    </style>


</resources>